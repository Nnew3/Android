<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 진행 바의 바탕 (투명) -->
    <item>
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@android:color/transparent" /> <!-- 진행 바의 바탕을 투명으로 설정 -->
            <stroke
                android:width="4dp"
                android:color="#000000" /> <!-- 테두리 색상과 두께 -->
        </shape>
    </item>
    <!-- 진행 바 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#3585FF" /> <!-- 진행 바의 색상 설정 -->
            </shape>
        </clip>
    </item>
</layer-list>
