<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- 뷰의 배경색 -->
        </shape>
    </item>
    <!-- 하단 테두리 -->
    <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- 투명한 색 -->
            <stroke
                android:width="2dp"
                android:color="#BDBDBD" /> <!-- 테두리 색 -->
        </shape>
    </item>
</layer-list>