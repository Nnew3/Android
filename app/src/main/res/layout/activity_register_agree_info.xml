<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".RegisterAgreeInfo">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="332dp"
        android:layout_height="33dp"
        android:progressDrawable="@drawable/register_progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="103dp" />

    <ImageButton
        android:id="@+id/btn_registerAgreeBack"
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/register_back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 표 시작 -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/register_table_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="244dp">

        <RadioButton
            android:id="@+id/radio_registerAgreeAll"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:padding="20dp"
            android:text="전체동의"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="252dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#000000" />

        <RadioButton
            android:id="@+id/radio_registerAgreePersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:padding="20dp"
            android:text="[필수] 개인정보"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="300dp" />

        <RadioButton
            android:id="@+id/radio_registerAgreeLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:padding="20dp"
            android:text="[필수] 위치 정보"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="348dp" />

        <RadioButton
            android:id="@+id/radio_registerAgreeNoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:padding="20dp"
            android:text="[선택] 알림"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="396dp" />
    </TableLayout>

    <TextView
        android:id="@+id/text_registerAgreeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif-black"
        android:text="서비스 이용을 위한 동의 안내"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="36dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:backgroundTint="#3585FF"
        android:text="완료"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        tools:layout_editor_absoluteY="565dp" />

    <!-- 표 종료 -->

</androidx.constraintlayout.widget.ConstraintLayout>
