<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".RegisterAgreeInfo">

    <ImageButton
        android:id="@+id/btn_registerAgreeBack"
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/register_back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_registerAgreeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="sans-serif-black"
        android:text="서비스 이용을 위한 동의 안내"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="36dp" />

    <!-- 표 추가 -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <!-- 첫 번째 행 -->
        <TableRow>
            <!-- 첫 번째 열: '전체동의' -->
            <RadioButton
                android:id="@+id/radio_button_allAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체동의" />
        </TableRow>

        <!-- 두 번째 행 -->
        <TableRow>
            <!-- 두 번째 열: '[필수] 개인정보' -->
            <RadioButton
                android:id="@+id/radio_button_personalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[필수] 개인정보" />
        </TableRow>

        <!-- 세 번째 행 -->
        <TableRow>
            <!-- 세 번째 열: '[필수] 위치 정보' -->
            <RadioButton
                android:id="@+id/radio_button_locationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[필수] 위치 정보" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
