<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAgreeInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_Back"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/register_back_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_gravity="center"
                android:layout_width="332dp"
                android:layout_height="33dp"
                android:progressDrawable="@drawable/register_progressbar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_check"
                android:layout_width="45dp"
                android:layout_height="46dp"
                android:layout_marginStart="48dp"
                android:src="@drawable/register_check_icon" />

            <TextView
                android:id="@+id/text_agreeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:text="서비스 이용을 위한 동의 안내"
                android:textSize="22dp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/register_agree_table_background">

            <!-- 첫 번째 행 -->
            <TableRow>
                <!-- 전체 동의 -->
                <CheckBox
                    android:id="@+id/checkBox_agreeAll"
                    android:background="@drawable/register_agree_checkbox_background"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:checked="true"
                    android:onClick="onCheckChanged" />

                <TextView
                    android:id="@+id/text_agreeAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="전체 동의"
                    android:textSize="16sp"/>
            </TableRow>

            <!-- 두 번째 행 -->
            <TableRow>
                <!-- 필수 개인정보 -->
                <CheckBox
                    android:id="@+id/checkBox_agreePersonal"
                    android:background="@drawable/register_agree_checkbox_background"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:checked="false"
                    android:onClick="onCheckChanged"
                    android:tag="개인정보_법"/>

                <TextView
                    android:id="@+id/text_agreePersonal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="[필수] 개인 정보"/>

                <!-- 법 내용 출력 TextView들 -->
                <TextView
                    android:id="@+id/text_agreePerLaw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="첫 번째 법 내용"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />

<!--                //아이콘 위치 수정 필요 (gravity="end" 해도 안되더라구요ㅠ)-->
                <ImageView
                    android:id="@+id/img_add_info1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="140dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/register_invert_triangle_icon" />
            </TableRow>

            <!-- 세 번째 행 -->
            <TableRow>
                <!-- 선택 개인정보 -->
                <CheckBox
                    android:id="@+id/checkBox_agreeLocation"
                    android:background="@drawable/register_agree_checkbox_background"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:checked="false"
                    android:onClick="onCheckChanged"
                    android:tag="위치정보_법" />

                <TextView
                    android:id="@+id/text_agreeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="[선택] 위치 정보"/>

                <TextView
                    android:id="@+id/text_agreeLocLaw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="두 번째 법 내용"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_add_info2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="140dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/register_invert_triangle_icon" />
            </TableRow>

            <!-- 네 번째 행 -->
            <TableRow>
                <!-- 선택 알림 -->
                <CheckBox
                    android:id="@+id/checkBox_agreeAlarm"
                    android:background="@drawable/register_agree_checkbox_background"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:checked="false"
                    android:onClick="onCheckChanged"
                    android:tag="알림_법" />

                <TextView
                    android:id="@+id/text_agreeAlarm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="[선택] 위치 정보"/>

                <TextView
                    android:id="@+id/text_agreeAlarmLaw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="세 번째 법 내용"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_add_info3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="140dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/register_invert_triangle_icon" />
            </TableRow>
        </TableLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <!-- 비밀번호 조건 부합 시 색상 변경 -->
            <Button
                android:id="@+id/btn_next"
                android:layout_width="252dp"
                android:layout_height="48dp"
                android:enabled="false"
                android:background="@drawable/register_next_button"
                android:text="다음" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
