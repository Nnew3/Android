<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCompleteActivity">

    <TextView
        android:id="@+id/text_registerComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif-black"
        android:text="회원가입이 완료되었습니다."
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_registerComplete"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3585FF"
        android:text="완료"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_congratulation"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.None" />

    <Button
        android:id="@+id/btn_registerCompleteToNews"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#245BAE"
        android:text="오늘의 뉴스 보러가기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_registerComplete"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.None" />

    <!-- 불꽃 무료 애니메이션 아이콘: https://www.flaticon.com/kr/free-animated-icon/fireworks-_8701027?term=%EC%B6%95%ED%95%98&page=1&position=1&origin=search&related_id=8701027
    현재는 아이콘으로 사용 -->
    <ImageView
        android:id="@+id/img_congratulation"
        android:layout_width="203dp"
        android:layout_height="159dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/register_complete_animation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_registerComplete" />

</androidx.constraintlayout.widget.ConstraintLayout>