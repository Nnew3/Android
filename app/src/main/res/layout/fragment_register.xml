<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/whiteblue"
        android:orientation="vertical"
        tools:context=".RegisterFragment">

        <FrameLayout
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="27dp">

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/backbtn" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="회원가입"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/none"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/name" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="이름"
                    android:textStyle="bold"
                    android:textColor="#6A6A6A" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="355dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/background_shape_gray"
                    android:padding="15dp"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="\t이름 또는 닉네임"
                    android:textColor="#6A6A6A"
                    android:textSize="13.5sp" />

                <Button
                    android:id="@+id/btn_namecheck"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/background_shape_littleblue"
                    android:text="중복 확인"
                    android:textStyle="bold"
                    android:textSize="10dp" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_registerNameInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginRight="28dp"
            android:text=" * 프로필 및 상식퀴즈 랭킹에 표시되는 이름으로 이후 변경할 수 없습니다."
            android:textColor="#6A6A6A"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/register_user_icon" />

                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="아이디"
                    android:textStyle="bold"
                    android:textColor="#6A6A6A" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="355dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/background_shape_gray"
                    android:paddingStart="15dp"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="\t아이디 (6~12자 이내, 영문/숫자 사용 가능)"
                    android:textColor="#6A6A6A"
                    android:textSize="13.5sp" />

                <Button
                    android:id="@+id/btn_idcheck"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/background_shape_littleblue"
                    android:text="중복 확인"
                    android:textStyle="bold"
                    android:textSize="10sp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_lock"
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/register_lock_icon" />

                <TextView
                    android:id="@+id/text_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="비밀번호"
                    android:textStyle="bold"
                    android:textColor="#6A6A6A" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="355dp"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/background_shape_gray"
                android:padding="15dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="\t비밀번호 (8자 이상, 영문/숫자 사용 가능)"
                android:textColor="#6A6A6A"
                android:textSize="13.5sp" />

            <EditText
                android:id="@+id/et_pw_check"
                android:layout_width="355dp"
                android:layout_height="45dp"
                android:layout_marginTop="5.5dp"
                android:background="@drawable/background_shape_gray"
                android:padding="15dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="\t비밀번호 확인"
                android:textColor="#6A6A6A"
                android:textSize="13.5sp" />
        </LinearLayout>


        <!--  사용자 동의  -->
        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/agree" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="이용 약관 동의"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/background_shape_littleblue"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="14dp">

                <!--개인정보-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/full_permission"
                        android:layout_width="27dp"
                        android:layout_height="17dp"
                        android:buttonTint="@color/gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="전체동의"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--구분선-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@android:color/darker_gray" />

                <!--개인정보-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/personal_permission"
                        android:layout_width="27dp"
                        android:layout_height="17dp"
                        android:buttonTint="@color/gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="[필수]"
                        android:textColor="#E95959"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:text="개인정보 수집 및 이용 약관"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/personal_info"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="80dp"
                        android:src="@drawable/register_invert_triangle_icon" />
                </LinearLayout>

                <!-- 개인정보 이용 약관 -->
                <TextView
                    android:id="@+id/tv_personal"
                    android:visibility="gone"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="left"
                    android:text="@string/personal"
                    android:textSize="10dp" />

                <!--알림 설정-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/alarm_permission"
                        android:layout_width="27dp"
                        android:layout_height="17dp"
                        android:buttonTint="@color/gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="[선택]"
                        android:textColor="#3565C3"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:text="속보 알림 수신 동의"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/alarm_info"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="119dp"
                        android:src="@drawable/register_invert_triangle_icon" />
                </LinearLayout>

                <!-- 알림 수신 이용 약관 -->
                <TextView
                    android:id="@+id/tv_alarm"
                    android:visibility="gone"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="left"
                    android:text="@string/alarm"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_complete_register"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="회원가입"
            android:background="@drawable/background_shape_blue_register"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>