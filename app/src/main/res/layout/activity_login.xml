<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:fontFamily="sans-serif-black"
            android:text="Login Details"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"

            android:textColor="#6A6A6A" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_edittext_background"
            android:backgroundTint="#E1E1E1"
            android:ems="10"
            android:inputType="text"
            android:hint="\tEnter your email here"
            android:textColor="#6A6A6A"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="#6A6A6A" />

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_edittext_background"
            android:backgroundTint="#E1E1E1"
            android:ems="10"
            android:inputType="text"
            android:hint="\tEnter your password here"
            android:textColor="#6A6A6A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/et_findPw"
            android:layout_width="98dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:text="Forgot Password?"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="252dp"
            android:layout_height="48dp"
            android:backgroundTint="#3585FF"
            android:text="Login"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_loginAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/et_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Sign Up"
                android:textColor="#3585FF"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>