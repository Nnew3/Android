<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteblue"
    tools:context=".CategoryFragment">

    <!--상단바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 카테고리 영역 -->
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backbtn" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <!-- 카테고리 영역 -->
                <LinearLayout
                    android:id="@+id/category_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4.5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/background_shape_lightblue">

                    <Button
                        android:id="@+id/politics"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:text="정치"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background=""/>
                    <Button
                        android:id="@+id/economy"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:text="경제"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background=""/>
                    <Button
                        android:id="@+id/society"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:text="사회"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background=""/>
                    <Button
                        android:id="@+id/area"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:text="지역"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background=""/>

                    <Button
                        android:id="@+id/recruitment"
                        android:layout_width="97sp"
                        android:layout_height="wrap_content"
                        android:text="생활/문화"
                        android:textSize="15.5sp"
                        android:textStyle="bold"
                        android:background=""/>
                    <Button
                        android:id="@+id/science"
                        android:layout_width="97sp"
                        android:layout_height="wrap_content"
                        android:text="IT/과학"
                        android:textSize="16.5sp"
                        android:textStyle="bold"
                        android:background=""/>
                    <Button
                        android:id="@+id/entertainment"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:text="연예"
                        android:textSize="16.5sp"
                        android:textStyle="bold"
                        android:background=""/>
                    <Button
                        android:id="@+id/sports"
                        android:layout_width="76sp"
                        android:layout_height="wrap_content"
                        android:text="스포츠"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background=""/>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="525dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/background_shape_white" />
    </LinearLayout>
</ScrollView>