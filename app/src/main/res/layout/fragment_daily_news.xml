<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newspager.DailyNewsFragment">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:background="@drawable/background_shape_lightblue"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:text="Today's News"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/daily_card_news"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/daily_newsImageView"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample" />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daily_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:text=" 래로래로래로래로래로"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/daily_content"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:text="@string/sample_content_30"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/daily_date"
                    android:layout_width="180dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:text="2024년 03월 22일"
                    android:gravity="right|bottom"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>