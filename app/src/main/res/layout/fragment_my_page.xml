<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/whiteblue"
    tools:context=".MyPageFragment">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="마이페이지"
        android:textSize="20sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile"/>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="7dp"
            android:padding="6dp"
            android:background="@drawable/white_radius"
            android:src="@drawable/modify"/>
    </FrameLayout>

    <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="user"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_keyword1"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/background_shape_littleblue"
            android:text="키워드1"
            android:textColor="#6A6A6A"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_keyword2"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/background_shape_monthlyblue"
            android:text="키워드2"
            android:textColor="#6A6A6A"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_keyword3"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:background="@drawable/background_shape_lightblue"
            android:text="키워드3"
            android:textColor="#6A6A6A"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="28dp"
            android:layout_gravity="left"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키워드 변경"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_keyword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/modify"/>
        </FrameLayout>

        <Switch
            android:id="@+id/switch_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"
            android:layout_gravity="left"
            android:text="속보 알림 수신"
            android:textStyle="bold"
            android:textSize="17sp"
            android:switchPadding="10dp" />


    <Button
        android:id="@+id/btn_change_pw"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="비밀번호 변경"
        android:textStyle="bold"
        android:textSize="17sp"
        android:background="@drawable/mypage_button"
        android:drawableRight="@drawable/arrow"
        android:layout_marginHorizontal="25dp" />
</LinearLayout>
