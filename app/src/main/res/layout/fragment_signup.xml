<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteblue"
    android:orientation="vertical"
    tools:context=".SignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/backbtn_gray">
        </ImageView>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="회원가입"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/none"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/name" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="이름"
                android:textStyle="bold"
                android:textColor="#6A6A6A" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="355dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_shape_gray"
                android:padding="15dp"
                android:ems="10"
                android:inputType="text"
                android:hint="\t이름 또는 닉네임"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

            <Button
                android:layout_width="63dp"
                android:layout_height="35dp"
                android:layout_gravity="right|center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/blue"
                android:text="중복 확인"
                android:textSize="10dp" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_registerNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="35dp"
        android:text=" * 프로필 및 상식퀴즈 랭킹에 표시되는 이름으로 이후 변경할 수 없습니다."
        android:textColor="#6A6A6A"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/register_user_icon" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="아이디"
                android:textStyle="bold"
                android:textColor="#6A6A6A" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_id"
                android:layout_width="355dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_shape_gray"
                android:paddingStart="15dp"
                android:ems="10"
                android:inputType="text"
                android:hint="\t아이디 (6~12자 이내, 영문/숫자 사용 가능)"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

            <Button
                android:layout_width="63dp"
                android:layout_height="35dp"
                android:layout_gravity="right|center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:text="중복 확인"
                android:textSize="10dp"
                android:backgroundTint="@color/blue" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_lock"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/register_lock_icon" />

            <TextView
                android:id="@+id/text_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="비밀번호"
                android:textStyle="bold"
                android:textColor="#6A6A6A" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="355dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_shape_gray"
            android:padding="15dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="\t비밀번호 (8자 이상, 영문/숫자 사용 가능)"
            android:textColor="#6A6A6A"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/pw_check"
            android:layout_width="355dp"
            android:layout_height="45dp"
            android:layout_marginTop="6.5dp"
            android:background="@drawable/background_shape_gray"
            android:padding="15dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="\t비밀번호 확인"
            android:textColor="#6A6A6A"
            android:textSize="14sp" />
    </LinearLayout>


    <!--  사용자 동의  -->
    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/agree" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="이용 약관 동의"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_shape_littleblue"
            android:orientation="vertical">

            <!--개인정보-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:text="전체동의" />
            </LinearLayout>

            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!--개인정보-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#E95959"
                    android:text="[필수]" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="7dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:text="개인정보 수집 및 이용 약관" />

                <ImageView
                    android:id="@+id/img_add_info1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="80dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/register_invert_triangle_icon" />
            </LinearLayout>

            <!--위치정보-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#3565C3"
                    android:text="[선택]" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="7dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:text="위치기반 서비스 이용약관" />


                <ImageView
                    android:id="@+id/img_add_info2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="86dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/register_invert_triangle_icon" />
            </LinearLayout>

            <!--알림 설정-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#3565C3"
                    android:text="[선택]" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="7dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:text="속보 알림 수신 동의" />

                <ImageView
                    android:id="@+id/img_add_info3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="119dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/register_invert_triangle_icon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:text="회원가입"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>