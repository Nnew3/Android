<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="300dp"
    android:background="@drawable/background_shape_littleblue"
    android:elevation="5dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:text="[ system ]"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/popup_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="This is a popup message."
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/popup_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:progressTint="@color/white"
        android:visibility="visible"/>

    <Button
        android:id="@+id/popup_close"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_shape_lightblue"
        android:text="Close"
        android:textSize="12sp" />

</LinearLayout>
