<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newspager.WeeklyNewsFragment">
    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:background="@drawable/background_shape_weeklyblue"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="Week's News"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/weekly_card_news"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weekly_newsImageView"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample" />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:paddingStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weekly_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:text="@string/sample_title_26"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/weekly_content"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/sample_content_45"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>