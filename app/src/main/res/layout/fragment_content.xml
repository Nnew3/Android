<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentFragment">

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteblue"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp">

                <ImageButton
                    android:id="@+id/backbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/backbtn" />

                <TextView
                    android:id="@+id/todayNews"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:text="MZ FOCUS NEWS"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="60dp" >

                <!-- 뉴스 타이틀 부분 -->
                <LinearLayout
                    android:id="@+id/news_top_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/news_img"
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:background="@color/white"
                        android:src="@drawable/img_sample" />

                    <TextView
                        android:id="@+id/news_title"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="@string/sample_title_28"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/news_date"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="13sp" />


                </LinearLayout>

                <!-- 뉴스 기사 요약 부분 -->
                <LinearLayout
                    android:id="@+id/news_content_group"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/news_content1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="13dp"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/background_shape_blue" />

                    <TextView
                        android:id="@+id/news_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="13dp"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/background_shape_blue" />

                    <TextView
                        android:id="@+id/news_content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/background_shape_blue" />
                </LinearLayout>

                <!-- 관련 뉴스 더보기 부분 -->
                <LinearLayout
                    android:id="@+id/news_related_group"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/news_related_keyword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연관 기사"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/news_related1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="13dp"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/background_shape_white" />

                    <TextView
                        android:id="@+id/news_related2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="18dp"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/background_shape_white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
